<Controls:MetroWindow x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication3"
        xmlns:fsxaml="http://github.com/fsprojects/FsXaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" 
        mc:Ignorable="d"
        Title="VIR app" Height="700" Width="1000">

    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="Information" />
            <Button Content="Aide en ligne" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid Background="white">
        
        
        <Grid x:Name="Main_Grid"  >
            <local:WorkSpace>
                <local:WorkSpace.Background>
                    <SolidColorBrush Color="Black" Opacity="0.05"/>
                </local:WorkSpace.Background>
            </local:WorkSpace>
        </Grid>
        
        <ResizeGrip x:Name="resizeGrip" Grid.RowSpan="3"/>
    </Grid>
</Controls:MetroWindow>
